  <script>
    function verificar() {
      let correctas = 0;

      if (document.getElementById("r1").value === "C") correctas++;
      if (document.getElementById("r2").value === "A") correctas++;
      if (document.getElementById("r3").value === "B") correctas++;

      document.getElementById("resultado").textContent = `Respuestas correctas: ${correctas} de 3`;
